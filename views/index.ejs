<%- include("partials/header.ejs") %>
<div class="container ">
    <div class="row">
        <div class="col-lg-12 ">
            <h1 class="text-center pt-5 pb-0 mb-0"><%=title%> To-Do</h1>
            <h1 class="text-center pb-5"><%= dayOfWeek %>, <%= month %> <%=day%></h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card border-0 mb-5">
                <ul class="list-group">     
                <% todoList.forEach((item) => {%>
                    <li class="list-group-item rounded-0">
                        <input type="checkbox" id="item" class="strikethrough form-check-input"value="Test"/>
                        <label for="item" class="strikethrough form-check-label"><%= item %></label>
                    </li>
                <% }); %>
            </ul>   
                </div>
            </div>
    </div>
    

    <form action="/" method="POST" class="form-inline">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="input-group w-auto">
                    <input class="form-control" type="text" name="addListItem" placeholder="New Item"/>
                    <input class="from-control btn btn-primary" type="submit" value="+" />
                </div>
            </div>
        </div>
    </form>
</div>
<%- include("partials/footer.ejs") %>
